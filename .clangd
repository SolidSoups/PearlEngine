CompileFlags:
  Add: [-Wno-unknown-warning-option]
  Remove: []

Index:
  Background: Skip  # DISABLED - was causing memory death spiral
  StandardLibrary: No  # Don't index standard library to save memory

# Note: PathExclude not needed with Background: Skip
# Files are only analyzed when opened, not indexed in bulk

Diagnostics:
  ClangTidy:
    Add: []
    Remove: []
  UnusedIncludes: None  # Disable to reduce log spam
  Suppress:
    - "drv_unknown_argument"
    - "err_drv_unsupported_opt"

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

Completion:
  AllScopes: No
