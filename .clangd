CompileFlags:
  Add: [-Wno-unknown-warning-option]
  Remove: []

Index:
  Background: Build
  StandardLibrary: No  # Don't index standard library to save memory
  External:
    MountPoint: .
    # Exclude external dependencies from indexing to prevent hangs
    Server: none
  # Only index src/ directory
  Include:
    - "src/.*"
  Exclude:
    - "external/.*"
    - "build/.*"
    - ".cache/.*"

Diagnostics:
  ClangTidy:
    Add: []
    Remove: []
  UnusedIncludes: None  # Disable to reduce log spam
  Suppress:
    - "drv_unknown_argument"
    - "err_drv_unsupported_opt"

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

Completion:
  AllScopes: No
